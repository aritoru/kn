            </li>

        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade" id="letras" role="tabpanel" aria-labelledby="letras-tab">
                {{ include('partials/mediatabs/_lyrics.html.twig') }}
            </div>
            <div class="tab-pane fade show active" id="audio" role="tabpanel" aria-labelledby="audio-tab">
                {{ include('partials/mediatabs/_audio.html.twig') }}
            </div>
            <div class="tab-pane fade" id="video" role="tabpanel" aria-labelledby="video-tab">
                {{ include('partials/mediatabs/_video.html.twig') }}
            </div>
            <div class="tab-pane fade" id="fotos" role="tabpanel" aria-labelledby="fotos-tab">...</div>
            <div class="tab-pane fade" id="fondos" role="tabpanel" aria-labelledby="fondos-tab">...</div>
