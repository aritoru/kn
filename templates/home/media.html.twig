{% block media_block %} nav-link-active {% endblock %}
{% block body %}
    <div class="container content center jumbotron announce_body text-center">
        <ul class="nav nav-pills center-pills" id="pills-tab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active custom-nav-pill" id="pills-profile-tab" data-toggle="pill" href="#audio" role="tab" aria-controls="audio" aria-selected="false">audio</a>
            </li>
            <li class="nav-item">
                <a class="nav-link custom-nav-pill" id="pills-profile-tab" data-toggle="pill" href="#video" role="tab" aria-controls="video" aria-selected="false">video</a>
