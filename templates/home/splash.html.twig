<script src="js/anime-master/anime.min.js"></script>
<script>
    $(function() {
        anime.timeline({loop: false})
            .add({
                targets: '.cover-heading .word',
                scale: [14,1],
                opacity: [0,1],
                easing: "easeOutCirc",
                duration: 1800,
                delay: function(el, i) {
                    return 800 * i;
                }
            }).add({
            targets: '.lead',
            opacity: [0,1],
            easing: "easeOutCirc",
            duration: 1800,
            delay: function(el, i) {
                return 800 * i;
            }
        });

        anime.timeline({loop: true})
            .add({
                targets: '#fire',
                opacity: [0,.5],
                easing: "easeInCubic",
                duration: 2800,
                elasticity: 1000,
            }).add({
            targets: '#fire',
            opacity: [.5,0],
            easing: "easeInCubic",
            duration: 2800,
            elasticity: 1000,
        });

    });
</script>
