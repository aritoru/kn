<hr>
{% set gallery = getGallery() %}
{% set i = 1 %}
{% set countPerColumn = (gallery|length)/3 %}
<div class="text-center center">

    <div class="d-flex flex-row  flex-wrap justify-content-center">

        {% for img in gallery %}


{% if i == 1 %}
        <div class="d-flex flex-column">
{% endif %}


            <a href="/img/gallery/{{ img }}" data-toggle="lightbox" data-gallery="example-gallery" class="gallery-photo">
                <img src="/img/gallery/{{ img }}" class="img-fluid">
            </a>

            {% set i = i + 1 %}

            {% if i == countPerColumn + 1  %}
                </div>
                {% set i = 1 %}
            {% endif %}

        {% endfor %}

    </div>
</div>

