{% extends('base.html.twig') %}
{% block body %}


    <div class="container content">

        {% if sent %}
            <div class="row jumbotron transparent">
                <div class="col">
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-success">
                            <strong>¡Todo correcto!</strong> {{ message }}
                        </div>
                    {% endfor %}

                    <h1 class="title display-6">resumen de tu pedido</h1>
                    <ul>
                    <li class="bandlead"><strong>{{ purchase.product.title|upper }}</strong>: {{ purchase.product.resume }}</li>
                    <li class="bandlead"><strong>PRECIO:</strong> {{ purchase.product.price }} €</li>
                    <li class="bandlead"><strong>CÓDIGO DE RESERVA:</strong> {{ purchase.uid }}</li>
                    </ul>
                    <h2 class="title">¿Cómo efectúo el pago?</h2>
                    <ul>
                        <li class="bandlead">El pago de tu <strong>{{ purchase.product.title|upper }}</strong> se realiza mediante transferencia bancaria.</li>
                        <li class="bandlead">Revisa tu email. Hemos enviado un correo electrónico a la dirección que nos has facilitado con las instrucciones continuar con la compra de tu <strong>{{ purchase.product.title|upper }}</strong>.</li>
                    </ul>
                    <h2 class="title">¡Gracias!</h2>
                </div>
            </div>

        {% else %}
            <div class="row jumbotron transparent">
                <div class="col">
                        {{ form_start(form, {'attr': {'class': 'kn-form'}}) }}
                        {{ form_widget(form) }}
                        {{ form_end(form) }}
                </div>
            </div>
        {% endif %}
    </div>



{% endblock %}